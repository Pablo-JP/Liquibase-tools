    <changeSet id="HU-00001_ID_CRTB_TA_LOAN_OPERATION_VOID" author="1048168">
        <createTable tablespace="USERS" remarks="Table to handle requests for Voiding an Operation" schemaName="SC_CREDIT" tableName="TA_LOAN_OPERATION_VOID">
            <column name="FI_LOAN_OPERATION_VOID_ID" type="NUMBER(15)" remarks="Request ID for voiding an operation">
                <constraints nullable="false"/>
            </column>
            <column name="FI_LOAN_ID" type="NUMBER(15)" remarks="Identifier of the Loan">
                <constraints nullable="false"/>
            </column>
            <column name="FI_ADMIN_CENTER_ID" type="NUMBER(8)" remarks="Management Center">
                <constraints nullable="false"/>
            </column>
            <column name="FI_OPERATION_REQUEST_ID" type="NUMBER(15)" remarks="ID of Operation requesting reverse of previous operation">
                <constraints nullable="false"/>
            </column>
            <column name="FI_OPERATION_TYPE_ID" type="NUMBER(5)" remarks="Identifier of type of operation performed">
                <constraints nullable="false"/>
            </column>
            <column name="FI_OPERATION_REVERSED_ID" type="NUMBER(15)" remarks="ID for Voided Operation">
                <constraints nullable="false"/>
            </column>
            <column name="FC_REVERSE_REASON" type="VARCHAR2(30)" remarks="Reason for reversing the operation">
                <constraints nullable="false"/>
            </column>
            <column name="FC_USER" type="VARCHAR2(30)" defaultValueComputed="USER" remarks="">
                <constraints nullable="false"/>
            </column>
            <column name="FC_IP_ADDRESS" type="VARCHAR2(39)" defaultValueComputed="'127.0.0.1'" remarks="">
                <constraints nullable="false"/>
            </column>
            <column name="FD_CREATED_DATE" type="DATE" defaultValueComputed="SYSDATE" remarks="">
                <constraints nullable="false"/>
            </column>
            <column name="FD_MODIFICATION_DATE" type="DATE" defaultValueComputed="SYSDATE" remarks="">
                <constraints nullable="false"/>
            </column>
            <column name="FC_UUID_TRACKING" type="VARCHAR2(36)" remarks="">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
